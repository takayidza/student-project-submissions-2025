@{
    ViewData["Title"] = "Home Page";
}

<header class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">CPRM2</h1>
        <p class="lead">Empowering Channel Partners with Real-Time Management Tools</p>
    </div>
</header>

<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <i class="bi bi-person-check fs-1 text-primary"></i>
                <h3 class="mt-3">Verified Partner Onboarding</h3>
                <p>Register agents with national ID and photo verification. Secure and seamless onboarding to build
                    trusted relationships.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-wallet2 fs-1 text-primary"></i>
                <h3 class="mt-3">Ecocash Integrated Payments</h3>
                <p>Partners can make payments for products like SIM cards or routers directly via Ecocash for real-time
                    transaction updates.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-box-seam fs-1 text-primary"></i>
                <h3 class="mt-3">Product Catalog & Inventory</h3>
                <p>Browse and request products with live availability: recharge cards, routers, data packages, and more.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="bg-white py-5 border-top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <a href="/Home/AdminDashboard">
                    <img src="https://cdn.dribbble.com/userupload/17953436/file/original-6e66c60b519ce498109b1153cf566f2b.png?resize=752x&vertical=center" alt="Dashboard" class="img-fluid rounded shadow" />
                </a>
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold">Partner Dashboard</h2>
                <p>Access training materials, chat with a bot assistant, and track commissions in a user-friendly
                    interface.</p>
                <ul class="list-unstyled">
                    <li>✅ View transaction history</li>
                    <li>✅ Upload ID or profile photo</li>
                    <li>✅ Access partner-specific training</li>
                    <li>✅ Track KPIs and progress</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<footer class="bg-dark text-white text-center py-4">
    <div class="container">
        <p class="mb-1">© 2025 CPRM2 | Built for my HIT400 Project</p>
        <small>Transforming agent management for the digital age</small>
    </div>
</footer>