@{
    ViewData["Title"] = "Privacy Policy";
}

 
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold mb-3">@ViewData["Title"]</h1>
                <p class="lead text-muted">Our commitment to protecting your data and privacy</p>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <div class="mb-5">
                        <h3 class="h5 fw-bold mb-3">Information Collection</h3>
                        <p class="text-muted mb-3">We collect essential data to ensure effective incident reporting and law enforcement response:</p>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bx bx-map me-2"></i>Location data for accurate incident reporting</li>
                            <li class="mb-2"><i class="bx bx-user me-2"></i>User information (email, name, phone number)</li>
                            <li class="mb-2"><i class="bx bx-file me-2"></i>Incident reports and timestamps</li>
                        </ul>
                        <p class="text-muted">Data is shared only with law enforcement agencies when necessary.</p>
                    </div>

                    <div class="mb-5">
                        <h3 class="h5 fw-bold mb-3">Data Usage</h3>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bx bx-map-pin me-2"></i>Mapping incidents for public awareness</li>
                            <li class="mb-2"><i class="bx bx-shield me-2"></i>Supporting law enforcement investigations</li>
                            <li class="mb-2"><i class="bx bx-line-chart me-2"></i>Generating activity statistics</li>
                        </ul>
                    </div>

                    <div class="mb-5">
                        <h3 class="h5 fw-bold mb-3">Data Protection</h3>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bx bx-lock me-2"></i>End-to-end data encryption</li>
                            <li class="mb-2"><i class="bx bx-check-shield me-2"></i>Restricted access to authorized personnel</li>
                            <li class="mb-2"><i class="bx bx-refresh me-2"></i>Regular security assessments</li>
                        </ul>
                    </div>

                    <div class="mb-5">
                        <h3 class="h5 fw-bold mb-3">Your Rights</h3>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bx bx-check-circle me-2"></i>Access your personal data</li>
                            <li class="mb-2"><i class="bx bx-check-circle me-2"></i>Request report deletion</li>
                            <li class="mb-2"><i class="bx bx-check-circle me-2"></i>Opt out of location tracking</li>
                        </ul>
                    </div>

                    <div class="mb-4">
                        <h3 class="h5 fw-bold mb-3">Contact Information</h3>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bx bx-envelope me-2"></i><a href="mailto:support@drugalertsystem.com" class="text-decoration-none">support@drugalertsystem.com</a></li>
                            <li class="mb-2"><i class="bx bx-map me-2"></i>123 Safety Street, Harare, Zimbabwe</li>
                        </ul>
                    </div>

                    <div class="text-center mt-5">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
